<!--pages/Individual/Individual.wxml-->
  <view class="page__hd">
        <view class="page__title">个人 </view>
        <view class="page__desc">个人主页</view>
  </view>
<view style="background:url('../../img/p.png')"></view>
  <view class="page__bd">
    <view class="container">
      <view class="info-box">
        <view style="text-align: center;margin-bottom:10%;box-shadow: 10px 10px 5px #888888;">
          <image class="avatar-img" src="{{avatarUrl}}" />
        </view>
     
        <text >昵称： {{nickName}}</text>
        <text >性别： {{gender}}</text>
        <text >国家： {{country}}</text>
        <text >省份： {{province}}</text>
        <text >本月收入：{{k}}</text>
      </view>
    
      <view style="margin-top:20%"> 
        <button open-type="getUserInfo"  type="default" bindtap="showUserInfoTap">获取个人信息</button>
      </view>
      <view>
        <button bindtap="share" type="primary">分享</button>
        <button bindtap="about" style="margin-top:50rpx" type="default">关于</button>
      </view>
    
    </view>
  
  </view>

