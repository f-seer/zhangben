/* pages/Individual/Individual.wxss */
.page__hd{
  width: 100%;
  height: 100rpx;
  margin-left: 50rpx;
  margin-bottom: 50rpx;
}
.page__title{
  font-size: 26px;
}
.page__desc{
  font-size: medium;
  color:rgba(0, 0, 0, 0.6);
}
.info-box{
  width: 80%;
}
.avatar-img {
  width: 100px;
  height: 100px;
  border: 3px dashed grey;
}
.info-box>text{
  display: block;
  margin-left: 5%;
  margin-top: 4%;
  background-image: linear-gradient(to right, blanchedalmond , yellow);
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}
.item__name{
  width: 20%;
  font-size: 16px;
  background-color: blanchedalmond;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}

.item__name2{
  width: 40%;
  text-align: left;
  font-size: 16px;
  background-color: blanchedalmond;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}