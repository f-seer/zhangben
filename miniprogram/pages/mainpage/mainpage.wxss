/* pages/mainpage/mainpage.wxss */
.page__hd{
  width: 100%;
  height: 100rpx;
  margin-left: 50rpx;
  margin-bottom: 50rpx;
}
.page__title{
  font-size: 26px;
}
.page__desc{
  font-size: medium;
  color:rgba(0, 0, 0, 0.6);
}
.btn{
  margin: 20rpx;
}
.page__bd{
  
}
.item__bd{
  width: 90%;
  height: 220rpx;
  background-color: white;
  border-radius: 20px;
  margin-left:5%;
  margin-right: 5%;
  margin-bottom: 20rpx;
  
}
.item__name{
  width: 100%;
  text-align: center;
  font-size: 16px;
  background-color: blanchedalmond;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
}
.item__info{
  color: rgba(0, 0, 0, 0.6);
  margin-left: 20rpx;
}
.table{
  display: flex;
}
.td{
  flex: 1;
}
.item__sell{
  color: #07c160;
  text-align: right;
  padding-right: 10px;
}
.page_foot{
  margin-bottom: 20%;
  display: flex;
  flex-direction: column;
}
.foot__text{
  width: 100%;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  color:rgba(0, 0, 0, 0.6);

}